<div class="row mb-4">
    <div class="col-md-12">
        <h2>Edit Blog Post</h2>
    </div>
</div>

<div class="row">
    <div class="col-lg-10 mx-auto">
        <div class="card">
            <div class="card-body">
                <form method="post" action="/user/updateBlog" enctype="multipart/form-data">
                    <input type="hidden" name="id" value="<%= blog._id %>">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" id="title" name="title" value="<%= blog.title %>" required>
                    </div>
                    <div class="mb-3">
                        <label for="summary" class="form-label">Summary</label>
                        <textarea class="form-control" id="summary" name="summary" rows="2" required><%= blog.summary %></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="content" class="form-label">Content</label>
                        <textarea class="form-control" id="content" name="content" rows="12" required><%= blog.content %></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="blogImage" class="form-label">Featured Image</label>
                        <% if (blog.image && blog.image.path) { %>
                            <div class="mb-2">
                                <img src="<%= blog.image.path %>" alt="Current image" class="img-thumbnail" style="max-height: 200px;">
                                <p class="form-text">Current image</p>
                            </div>
                        <% } %>
                        <input class="form-control" type="file" id="blogImage" name="blogImage" accept="image/*">
                        <div class="form-text">Upload a new image to replace the current one (max 5MB).</div>
                    </div>
                    <div class="mb-3">
                        <label for="tags" class="form-label">Tags (comma separated)</label>
                        <input type="text" class="form-control" id="tags" name="tags" value="<%= blog.tags ? blog.tags.join(', ') : '' %>">
                    </div>
                    <div class="form-check mb-3">
                        <input class="form-check-input" type="checkbox" id="published" name="published" <%= blog.published ? 'checked' : '' %>>
                        <label class="form-check-label" for="published">
                            Published
                        </label>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a href="/user/home" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">Update Post</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>